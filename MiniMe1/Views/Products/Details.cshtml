@using Microsoft.AspNetCore.Http;
@model sharedAngular.Models.Products

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Name);
}
<div class="container" style="margin-top:30px">
    <div class="row">

        <div class="col-sm">

            <div class="fakeimg"><img src=@Html.DisplayFor(model => model.Pictures) width="300px"></div><br>
        </div>




        <div class="col-sm">

            <h2>@Html.DisplayFor(model => model.Name)</h2>

            <p>@Html.DisplayNameFor(model => model.Colors)</p>

            <button type="button" class="btn btn-dark">@Html.DisplayFor(model => model.Colors)</button>

            @if (Model.Colors2 != null)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Colors2)" />
            }
            @if (Model.Colors3 != null)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Colors3)" />
            }
            @if (Model.Colors4 != null)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Colors4)" />
            }



            <p>@Html.DisplayNameFor(model => model.Size)</p>
            <in type="button" class="btn btn-dark">@Html.DisplayFor(model => model.Size)</in>

            @if (Model.Size2 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size2)">
            }

            @if (Model.Size3 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size3)">
            }
            @if (Model.Size4 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size4)">
            }
            @if (Model.Size5 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size5)">
            }
            @if (Model.Size6 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size6)">
            }
            @if (Model.Size7 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size7)">
            }
            @if (Model.Size8 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size8)">
            }
            @if (Model.Size9 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size9)">
            }
            @if (Model.Size10 > 0)
            {
                <input type="submit" class="btn btn-dark" value="@Html.DisplayFor(model => model.Size10)">
            }






            <p>@Html.DisplayNameFor(model => model.Amount)</p>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-dark">-</button>
                <button type="button" class="btn btn-dark">1</button>
                <button type="button" class="btn btn-dark">+</button>
            </div>
            <p>@Html.DisplayFor(model => model.Amount) במלאי!</p>
            <h5>@Html.DisplayNameFor(model => model.Price) @Html.DisplayFor(model => model.Price) ש"ח</h5>

            <p><b>פרטים נוספים: </b>@Html.DisplayFor(model => model.Description)</p>
            <br>
            <a asp-action="AddToCart" asp-route-id="@Model.Id">
                <p button type="button" class="btn btn-dark">הוספה לסל</button></p>
                
            </a>
            <a class="btn btn-outline-light" asp-action="AddToCart" asp-route-id="@Model.Id">הוסף לסל</a>
            <a asp-action="AddToLike" asp-route-id="@Model.Id">
                <p button type="button" class="btn btn-dark">הוספה למועדפים</button></p>
                
            </a>
            <a class="btn btn-outline-light" asp-action="AddToLike" asp-route-id="@Model.Id">הוסף למועדפים</a>
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" fill="currentColor"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z">
                </path>
            </svg>
            </button>
            </p>
        </div>



    </div>
</div>



<div>
    @if (Context.Session.GetString("manag") != null)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">ערוך מוצר</a>
        <a>|</a>
