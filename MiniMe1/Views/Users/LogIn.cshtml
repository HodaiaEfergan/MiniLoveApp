@using Microsoft.AspNetCore.Http;

@model sharedAngular.Models.Users

@{
    ViewData["Title"] = "התחברות";
}
<div class="col-sm">
    @if (Context.Session.GetString("user") != null)
    {
        <h1>שלום @Context.Session.GetString("user"),</h1>
        <h2>הינך מחובר לחשבונך </h2>
        <hr class="mb-4">
        
        <p>
            <a class="btn btn-light btn-lg btn-block" style="background-color: maroon;" type="submit" asp-action="LogUot">התנתק</a>
        </p>
    }
    else
    {
        <h2>התחברות</h2>
        <form asp-action="LogIn">
            <div class=c>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>


                <hr class="mb-4">
                <button class="btn btn-light btn-lg btn-block" value="LogIn" style="background-color: maroon;" type="submit">
                    התחבר
                </button>
                <hr />
                @if (ViewData["Error"] != null)
                {
                    <div style="color:black; font-weight:bold">@ViewData["Error"]</div>
                }

                <a style="color:black" asp-action="Create" role="button" aria-haspopup="true" aria-expanded="false">
                    אין לך עדיין חשבון?
                </a>
            </div>

        </form>
    }
</div>


